doctype
html( lang="it" )
    head
        title CESOP Demo
        //- Bootstrap
        link(href="/bootstrap.min.css", rel="stylesheet")
        link(href="/style.css", rel="stylesheet")
    body
        .container
            .header
                form(name="input", action="/cerca", method="post")
                    div.form-row.align-items-center
                        div.col-sm-9
                            input.cerca(type="text", name="cerca", placeholder="Cerca")

                        div.col-auto
                            button(type="submit", class="btn btn-primary") Cerca
            .row
                .risultati
                    ul.listaRisultati
                        for docu in documents
                                li.singolo
                                    p.risultato
                                        strong #{docu.nome} #{docu.cognome}
                                    p.risultato
                                        strong Competenze: &nbsp;
                                        for cl in docu.competenzeLabels
                                            span #{cl} &nbsp;
                                    p.risultato
                                        strong
                                            mark Parents:
                                        for clp in docu.competenzeParentsLabels
                                            span &nbsp; #{clp}
            .row
                .risultati
                    p.totale ricerca eseguita in #{total} secondi